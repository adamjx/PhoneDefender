<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:settingitem="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.study.gourdboy.phonedefender.activities.Setup4Activity">
    <TextView
       style="@style/myPageTitle"
        android:text="4 设置向导完成"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前设置已经完成，请选择是否打开防盗功能"/>
    <com.study.gourdboy.phonedefender.view.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingitem:itemtitle="功能状态"
        settingitem:offstring="功能未开启"
        settingitem:onstring="功能开启"
        settingitem:sp_keyname="anti_thief"
        android:id="@+id/si_setup4_antithief"></com.study.gourdboy.phonedefender.view.SettingItem>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点此激活管理员权限,否则一些功能将收到限制！"
        android:onClick="active"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/presence_online"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/setup3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="上一步"
            android:background="@drawable/setupbt_bg"
            android:onClick="previous"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="设置完成"
            android:background="@drawable/setupbt_bg"
            android:onClick="next"/>
    </RelativeLayout>
</LinearLayout>
